package com.ben.niuke;

import javafx.scene.control.RadioMenuItem;

import java.text.DateFormat;
import java.text.SimpleDateFormat;
import java.util.*;

/**
 * Created by W on 2017/2/11.
 */
public class test1 {

    public static void demoMath(){
        System.out.println(Math.sqrt(16));
        System.out.println(Math.addExact(16,10));
        System.out.println(Math.ceil(2.1));
    }

    public  static void demoRandom(){
        Random r = new Random();
        Random r2 = new Random();
        System.out.println(r2.nextInt(100));
        List<Integer> array = Arrays.asList(new Integer[]{1,2,3,4,5});
        Collections.shuffle(array);
        System.out.println(array);
        r.setSeed(1);
        System.out.println(r.nextInt(100));
    }

    public static void demoDate(){
        Date date = new Date();
        System.out.println(date.getTime());
        DateFormat df = new SimpleDateFormat("yyyy:MM:dd hh:mm:ss");
        System.out.println(DateFormat.getDateInstance(DateFormat.FULL).format(date));
        System.out.println(df.format(date));
    }

    public static void demoList(){
        List strList = new ArrayList<String>();
        List strList2 = new ArrayList<String>();
        for(int i = 0;i<4;++i){
            strList.add(String.valueOf(i));
        }
        for(int i = 0;i<4;++i){
            strList2.add(String.valueOf(i));
        }
        strList.addAll(strList2);
        System.out.println(strList2.contains("2"));
        System.out.println(strList.containsAll(strList2));
        System.out.println(strList);
    }

    public static void demoSet(){
        Set<String> strSet = new HashSet<String>();
        for(int i = 0;i<4;++i){
            strSet.add(String.valueOf(i));
        }

        System.out.println(strSet);
    }

    public static void demoKeyvalue(){
        Map<String,String> map = new HashMap<>();
        for(int i = 0;i<4;++i){
            map.put(String.valueOf(i),String.valueOf(i*i));
        }
        System.out.println(map);
        for (Map.Entry<String ,String> entry: map.entrySet()){
            System.out.println(entry.getKey()+":"+entry.getValue());
        }
        System.out.println(map.keySet());
        System.out.println(map.values());
        System.out.println(map.get("1"));

    }

    public static void demoException(){
        try{
            String a = null;
            int i = 2;
            i = i / 0;
            a.indexOf("1");
        }
        catch (NullPointerException npe){
            System.out.println("nullpoint");
        }
        catch (Exception e ){
            System.out.println("exc");
        }finally {
            System.out.println("finally");
        }
    }

    public static void main(String args[]){
        //demoMath();
        demoDate();
        // demoRandom();
        //demoList();
        //demoSet();
        //demoKeyvalue();
        //demoException();
    }


}
